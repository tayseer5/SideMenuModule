<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iti.sidemenumodule.view.ProfileFragment"
    android:background="#fcfcfc">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#fff"
            android:padding="8dp"
            android:weightSum="2"
            android:layout_marginBottom="16dp"
            android:elevation="1dp">
            <LinearLayout android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/employee_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:src="@mipmap/employee_place_holder"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/change_pic_button_string"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@null"
                    android:id="@+id/change_pic_button"/>
            </LinearLayout>
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="24dp"
                android:textColor="#454545"
                android:id="@+id/profile_name_textview"
                android:layout_alignParentBottom="true"
                android:text="أحمد حسين"
                android:layout_gravity="right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#454545"
                android:id="@+id/profile_email_textview"
                android:layout_alignParentBottom="true"
                android:text="Ahmed@yahoo.com"
                android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="26dp"
            android:textColor="#454545"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:text="@string/profile_personal_information" />

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:elevation="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="22dp"
                android:textColor="#454545"
                android:layout_alignParentBottom="true"
                android:text="@string/profile_professinal_title" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/professinal_title_edittext"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="22dp"
                android:textColor="#454545"
                android:layout_alignParentBottom="true"
                android:text="@string/profile_summary" />
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="2"
                android:gravity="top|right"
                android:maxLines="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/summary_edittext"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="22dp"
                android:textColor="#454545"
                android:layout_alignParentBottom="true"
                android:text="@string/profile_skills" />
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="2"
                android:gravity="top|right"
                android:maxLines="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/skills_edittext"
                android:layout_marginBottom="8dp"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="22dp"
            android:textColor="#454545"
            android:layout_alignParentBottom="true"
            android:text="@string/profile_phone" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:id="@+id/phone_edittext"
                android:layout_marginBottom="8dp"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="22dp"
            android:textColor="#454545"
            android:layout_alignParentBottom="true"
            android:text="@string/profile_city" />
            <EditText
                android:layout_width="match_parent"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:id="@+id/city_edittext"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="22dp"
                android:textColor="#454545"
                android:layout_alignParentBottom="true"
                android:text="@string/profile_street" />
            <EditText
                android:layout_width="match_parent"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:id="@+id/street_edittext"
                android:layout_marginBottom="8dp"/>


            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                >

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_male"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_female" />

            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24dp"
                android:text="@string/protolio_button_string"
                android:background="@android:color/transparent"
                android:stateListAnimator="@null"
                android:id="@+id/protolio_button"/>

            </LinearLayout>

        </LinearLayout>
</ScrollView>
</FrameLayout>
